@model WestBlog.Models.RegisterViewModel
@{
}

<main class="back-g">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row container view-content">
            <div class="col-md-3 col-md-offset-1">
                <h1>Register</h1>
                <h4>Once registered, you will be able to comment on any blog post and reply to other commenters.  Alternatively, log in using an existing account with one of the listed services.</h4>
            </div>
            <div class="col-md-7 col-md-offset-1">
                <div class="col-md-12">@Html.ValidationSummary("", new { @class = "text-danger" })</div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-10 col-md-1">
                <input type="submit" class="btn btn-round btn-dark" value="Register" />
            </div>
        </div>
    }
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
