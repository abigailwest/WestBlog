@model IEnumerable<WestBlog.Models.Post>
@{
    ViewBag.Title = "Admin";
}

<main class="container view-content">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="row header">
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.Title)</h4>
        </div>
        <div class="col-sm-3">
            <h4>@Html.DisplayNameFor(model => model.Body)</h4>
        </div>
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.Created)</h4>
        </div>
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.Updated)</h4>
        </div>
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.Category)</h4>
        </div>
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.Slug)</h4>
        </div>
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.MediaURL)</h4>
        </div>
        <div class="col-sm-1">
            <h4>@Html.DisplayNameFor(model => model.Published)</h4>
        </div>
        <div class="col-sm-2">

        </div>
    </div>

@foreach (var post in Model)
{
        <div class="row entries">
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => post.Title)
            </div>
            <div class="col-sm-3">
                @Html.Raw(post.Body)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelpost => post.Created)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => post.Updated)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => post.Category)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => post.Slug)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => post.MediaURL)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => post.Published)
            </div>
            <div class="col-sm-2">
                <div class="btn-group btn-group-xs" role="group">
                    <button type="button" class="btn btn-dark btn-round" onclick="location.href='@Url.Action("Edit")';return false;">Edit</button>
                    <button type="button" class="btn btn-dark btn-round" onclick="location.href='@Url.Action("Details")';return false;">Full Post</button>
                    <button type="button" class="btn btn-dark btn-round" onclick="location.href='@Url.Action("Delete")';return false;">Delete</button>
                </div>
            </div>
        </div>
}

</main>


